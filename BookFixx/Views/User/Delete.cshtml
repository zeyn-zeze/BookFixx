@model BookFixx.database.User

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <div>
        <h4>@Model.FirstName @Model.LastName</h4>
        <p>
            <strong>Username:</strong> @Model.Username<br />
            <strong>Email:</strong> @Model.Email<br />
            <strong>Phone Number:</strong> @Model.phoneNumber<br />
            <strong>Role:</strong> @Model.Role<br />
        </p>

        @using (Html.BeginForm("Delete", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.UserID) <!-- Adjust if your ID property is named differently -->
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", new { @class = "btn btn-secondary" })
        }
    </div>
</div>

