@model BookFixx.Models.RegisterModel

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profil Bilgileriniz</h2>

<div class="profile-info">
    <p><strong>Kullanıcı Adı:</strong> @Model.Username</p>
    <p><strong>TC Kimlik No:</strong> @Model.TC</p>
    <p><strong>Ad:</strong> @Model.FirstName</p>
    <p><strong>Soyad:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
</div>

<a href="@Url.Action("EditProfile", "Home")">Profilinizi Düzenle</a>
