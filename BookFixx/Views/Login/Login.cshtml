@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş</title>

    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/login.css" />
</head>
<body>

    <div class="login">

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login__form" }))
        {
            <h1 class="login__title">Giriş</h1>

            <div class="login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="text" required class="login__input" id="login-username" name="Username" placeholder=" ">
                        <label for="login-username" class="login__label">Username</label>
                    </div>
                </div>

                <div class="login__box">
                    <i class="ri-lock-2-line login__icon"></i>

                    <div class="login__box-input">
                        <input type="password" required class="login__input" id="login-pass" name="Password" placeholder=" ">
                        <label for="login-pass" class="login__label">Password</label>
                        <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                    </div>
                </div>
            </div>

            <button type="submit" class="login__button">Giriş</button>

            <p class="login__register">
                Hesabın yoksa -> <a href="@Url.Action("Register", "Account")">Kayıt Ol</a>
            </p>

        }
    </div>
    <script src="~/Content/js/login.js"></script>
</body>
</html>
